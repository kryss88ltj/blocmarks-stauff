<div class="row">
  <div class="span-2">
  <small>Post the url you want to save:</small>
  <%= form_for [topic, post], html: { class: 'form-horizontal' } do |f| %>
    <div class="control-group">
      <%= f.label :url, class: 'control-label' %>
      <%= f.text_field :url, :autofocus => true  %>
  </div>
  </div>
  <p>
    <div class="control-group">
      <div class="controls">
        <%= f.submit "Save", class: 'btn' %>
      </div>
    </div>
  <% end %>
</div>
</div>